# Cache Busting Configuration for Apache Servers
# Prevents aggressive caching of HTML, JS, and CSS files

<IfModule mod_headers.c>
  # Disable caching for HTML files
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Short cache for JS and CSS (1 hour) with must-revalidate
  <FilesMatch "\.(js|css)$">
    Header set Cache-Control "max-age=3600, must-revalidate"
  </FilesMatch>

  # Longer cache for images and fonts (1 week)
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "max-age=604800, public"
  </FilesMatch>
</IfModule>

# Enable ETags for better cache validation
FileETag MTime Size
